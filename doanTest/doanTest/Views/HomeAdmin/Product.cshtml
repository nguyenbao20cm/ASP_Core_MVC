@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="/css/member.css" />

<div class="m-subheader member-list ">
    <div class="d-flex align-items-center">
        x
        <div class="mr-auto">
            <h3 class="m-subheader__title m-subheader__title--separator">All Product</h3>
            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                <li class="m-nav__item m-nav__item--home">
                    <a asp-controller="homeadmin" asp-action="index" class="m-nav__link m-nav__link--icon">
                        <i class="m-nav__link-icon la la-home"></i>
                    </a>
                </li>
                <li class="m-nav__separator">-</li>
                <li class="m-nav__separator"></li>
                <li class="m-nav__item">
                    <a asp-controller="homeadmin" asp-action="member" class="m-nav__link">
                        <i class="m-nav__link-icon flaticon-users-1"></i>
                    </a>
                </li>
            </ul>
        </div>
        <div>
        </div>
    </div>
</div>

<div class="m-content">

    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Product
                    </h3>
                </div>
            </div>
            <div class="m-portlet__head-tools">
                <a asp-controller="homeadmin" asp-action="createproduct" class="btn btn-primary m-btn m-btn--custom m-btn--icon m-btn--air m-btn--pill">
                    <span>
                        <i class="la la-plus"></i>
                        <span>New Product</span>
                    </span>
                </a>
                <ul class="m-portlet__nav">
                    <li class="m-portlet__nav-item">

                    </li>

                </ul>
            </div>
        </div>
        <div class="m-portlet__body">

            <!--begin: Datatable -->
            <div id="m_table_1_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                <div class="row align-items-center">
                    <div class="col-xl-8 order-2 order-xl-1">
                        @using (@Html.BeginForm("Member", "Homeadmin", FormMethod.Get))
                        {
                            <div class="form-group m-form__group row align-items-center">
                                <div class="col-md-4">

                                    <div class="m-input-icon m-input-icon--left">
                                        @Html.TextBox("Search", null, new { @class = "form-control m-input", @placeholder = "Search...", id = "generalSearch" })
                                        <span class="m-input-icon__icon m-input-icon__icon--left">
                                            <span><i class="la la-search"></i></span>
                                        </span>

                                    </div>



                                </div>
                                <input type="submit" value="Search" />
                            </div>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer" id="m_table_1" aria-describedby="m_table_1_info" role="grid">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="m_table_1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Record ID: activate to sort column descending" style="width: 46.25px;">STT</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="m_table_1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Record ID: activate to sort column descending" style="width: 46.25px;">SKU</t>
                                    <th class="sorting" tabindex="0" aria-controls="m_table_1" rowspan="1" colspan="1" aria-label="Country: activate to sort column ascending" style="width: 120px;">Name</th>
                                    <th class="sorting" tabindex="0" aria-controls="m_table_1" rowspan="1" colspan="1" aria-label="Ship City: activate to sort column ascending" style="width: 95.25px;">Author</th>
                                    <th class="sorting" tabindex="0" aria-controls="m_table_1" rowspan="1" colspan="1" aria-label="Ship Address: activate to sort column ascending" style="width: 113.25px;">Price</th>
                                    <th class="sorting" tabindex="0" aria-controls="m_table_1" rowspan="1" colspan="1" aria-label="Company Agent: activate to sort column ascending" style="width: 88.25px;">Stock</th>
                                    <th class="sorting" tabindex="0" aria-controls="m_table_1" rowspan="1" colspan="1" aria-label="Ship Date: activate to sort column ascending" style="width: 42.25px;">ProductTypeId</th>
                                    <th class="sorting" tabindex="0" aria-controls="m_table_1" rowspan="1" colspan="1" aria-label="Ship Date: activate to sort column ascending" style="width: 42.25px;">ProductType</th>
                                    <th class="sorting" tabindex="0" aria-controls="m_table_1" rowspan="1" colspan="1" aria-label="Ship Date: activate to sort column ascending" style="width: 42.25px;">Image</th>
                                    <th class="sorting" tabindex="0" aria-controls="m_table_1" rowspan="1" colspan="1" aria-label="Ship Date: activate to sort column ascending" style="width: 42.25px;">Status</th>
                                    <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="Actions" style="width: 69.5px;">Options</th>
                                </tr>
                            </thead>
                            <tbody>

                                @{
                                    int stt = 0;
                                    foreach (var item in Model)
                                    {
                                        stt = stt + 1;
                                        <tr role="row" class="odd">
                                            <td>@stt</td>
                                            <td>@item.SKU</td>
                                            <td>@item.Name</td>
                                            <td>@item.Description</td>
                                            <td>@item.Price</td>
                                            <td>@item.Stock</td>
                                            <td>@item.ProductTypeId</td>
                                            <td>@item.ProductType</td>
                                            <td> <img src="/img/product/@item.Image" alt="Image" width="40" height="40"></td>
                                            <td>@item.Status</td>

                                            <td nowrap="">
                                                <span class="dropdown">
                                                    <a href="@Url.Action("UpdateMember","Homeadmin", new {id = item.Id})" class="m-portlet__nav-link btn m-btn m-btn--hover-brand m-btn--icon m-btn--icon-only m-btn--pill" title="Update">
                                                        <i class="la la-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("DeleteProduct","Homeadmin", new {id = item.Id})" onclick="return confirm('Are you sure Delete?')" class="m-portlet__nav-link btn m-btn m-btn--hover-danger m-btn--icon m-btn--icon-only m-btn--pill" title="Delete">
                                                        <i class="la la-trash"></i>
                                                    </a>
                                                </span>

                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div><div class="row">
                    <div class="col-sm-12 col-md-4"></div>
                    <div class="col-sm-12 col-md-8">
                        <div class="dataTables_paginate paging_simple_numbers">
                            @*Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount*@
                            @*@Html.PagedListPager(Model, page => Url.Action("Member", new { i = page }), new X.PagedList.Web.Common.PagedListRenderOptions()*@

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- END EXAMPLE TABLE PORTLET-->
</div>
